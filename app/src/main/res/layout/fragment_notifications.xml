<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/title_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/touxiang" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_nike_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:text="用户昵称"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/tv_jifen_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:text="积分："
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_gomydetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/my_setup" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_rect_white"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="17sp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多 >"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/ll_daizhifu"
                    style="@style/homell"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dazhifu_pic" />

                    <TextView
                        style="@style/hometv"
                        android:text="待支付"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_daifahuo"
                    style="@style/homell">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dashouhuo_pic" />

                    <TextView
                        style="@style/hometv"
                        android:text="待发货"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_daishouhuo"
                    style="@style/homell">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/huanghuo_pic" />

                    <TextView
                        style="@style/hometv"
                        android:text="待收货"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_complete"
                    style="@style/homell"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wancheng_pic" />

                    <TextView
                        style="@style/hometv"
                        android:text="已完成"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_rect_white"
                android:layout_marginRight="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线鉴定"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:id="@+id/ll_my_jianding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:id="@+id/tv_fankui"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待反馈"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/my_daifankui"
                        android:drawablePadding="10dp"/>
                    <TextView
                        android:id="@+id/tv_jd_complete"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已完成"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/my_wancheng"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_rect_white"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="托管&amp;寄售"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:id="@+id/ll_tuo_guan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史记录"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/my_record"
                        android:drawablePadding="10dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_gongyi"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公益捐赠"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/iv_gongyi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_wenhao"
                    android:layout_marginRight="15dp"
                    android:padding="4dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_leve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV. "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/title_color"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_leve_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差 公益值升级为 LV.  等级"
                android:textSize="12sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_leve_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV "
                    android:textStyle="bold"
                    android:textSize="6sp"
                    android:textColor="@color/text_color"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/btn_lv_star"/>
                <ProgressBar
                    android:id="@+id/pb_gongyi"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:max="1000"
                    android:progressDrawable="@drawable/my_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"/>
                <TextView
                    android:id="@+id/tv_leve_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV "
                    android:textColor="@color/btn_text_color"
                    android:textStyle="bold"
                    android:textSize="6sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/btn_lv_end"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/iv_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_sunny"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@drawable/shape_rect_white"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:id="@+id/ll_pei_xun"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:src="@drawable/add_vip"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="我的培训"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/f6"/>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:src="@drawable/dingwei"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="收货地址"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/f6"/>
            <LinearLayout
                android:id="@+id/ll_kefu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:src="@drawable/link_us"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="客服中心"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/f6"/>
            <LinearLayout
                android:id="@+id/ll_coupon"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:src="@drawable/coupon"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="优惠券"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/f6"/>
            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:src="@drawable/fenxiang"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="分享"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/f6"/>
            <LinearLayout
                android:id="@+id/ll_jifen"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:src="@drawable/my_jifen"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="兑换积分"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/f6"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>