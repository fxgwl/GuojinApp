<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activitys.MyOrderListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/head_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RadioGroup
                android:id="@+id/rg_menu"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">


                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_class01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/choose_bg_xian"
                    android:button="@null"
                    android:checked="true"
                    android:paddingBottom="10dp"
                    android:text="待付款"
                    android:textAlignment="center"
                    android:textColor="@drawable/btn_text_color" />
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_class02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/choose_bg_xian"
                    android:button="@null"
                    android:checked="false"
                    android:paddingBottom="10dp"
                    android:text="待发货"
                    android:textAlignment="center"
                    android:textColor="@drawable/btn_text_color" />
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_class03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/choose_bg_xian"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:text="待收货"
                    android:textAlignment="center"
                    android:textColor="@drawable/btn_text_color" />
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_class04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/choose_bg_xian"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:text="已完成"
                    android:textAlignment="center"
                    android:textColor="@drawable/btn_text_color" />
            </RadioGroup>
        </LinearLayout>
        <com.axehome.www.guojinapp.views.MyListView
            android:id="@+id/mlv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@color/f6"
            android:dividerHeight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>