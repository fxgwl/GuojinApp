<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.axehome.www.guojinapp.ui.activitys.UpgrapUserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/head_bar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前身份"
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/background_white"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lever"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_curunt_leve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="初级代理商"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可选身份"
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <RadioGroup
            android:id="@+id/rg_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10dp">
            <RadioButton
                android:id="@+id/rb_zhong"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="true"
                android:textAlignment="center"
                android:text="中级代理商"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/btn_radio_orange"
                android:textColor="@drawable/btn_text_order"
                android:layout_margin="5dp"/>
            <RadioButton
                android:id="@+id/rb_gao"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="false"
                android:textAlignment="center"
                android:text="高级代理商"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/btn_radio_orange"
                android:textColor="@drawable/btn_text_order"
                android:layout_margin="5dp"/>
            <RadioButton
                android:id="@+id/rb_zong"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="false"
                android:textAlignment="center"
                android:text="城市代理商"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/btn_radio_orange"
                android:textColor="@drawable/btn_text_order"
                android:layout_margin="5dp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员等级说明"
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leve"
                android:lineHeight="25dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补齐差价："
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥2000元"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/b_submit"
            android:layout_width="217dp"
            android:layout_height="36dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/background_orange"/>
    </LinearLayout>
</ScrollView>