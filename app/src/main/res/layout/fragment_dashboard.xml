<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/sc_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/head_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_bottom_white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pic_01"
                    android:layout_marginLeft="20dp"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="海得服务"
                        android:textSize="17sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <Button
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:background="@drawable/btn_main_green"
                            android:text="物品鉴定"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>
                        <Button
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:background="@drawable/btn_main_green"
                            android:text="物品鉴定"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>
                        <Button
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:background="@drawable/btn_main_green"
                            android:text="物品鉴定"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_kefu_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_menu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/shape_rect_white"
                android:gravity="center_vertical">
                <RadioButton
                    android:id="@+id/rb_jian_ding"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="在线鉴定"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/color_radiobutton"/>
                <RadioButton
                    android:id="@+id/rb_tuo_guan"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="托管&amp;寄售"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/color_radiobutton"/>
                <RadioButton
                    android:id="@+id/rb_pei_xun"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技能培训"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/color_radiobutton"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_jian_ding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_rect_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="15dp"
                            android:background="@color/title_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保障服务"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/f6"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/server_pic01"
                        android:layout_margin="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_rect_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="15dp"
                            android:background="@color/title_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="鉴定过程"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/f6"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:background="@drawable/server_pic02"
                        android:layout_margin="20dp"/>

                    <Button
                        android:id="@+id/b_jian_ding"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:text="发起鉴定"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_main_green"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_rect_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="15dp"
                            android:background="@color/title_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="以往鉴定"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/f6"/>
                    <com.axehome.www.guojinapp.views.MyListView
                        android:id="@+id/mlv_jianding_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"/>
                </LinearLayout>
            </LinearLayout>


            <!--托管&寄售-->
            <LinearLayout
                android:id="@+id/ll_tuo_guan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_rect_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="15dp"
                            android:background="@color/title_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保障服务"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/f6"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/server_pic01"
                        android:layout_margin="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_rect_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="15dp"
                            android:background="@color/title_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="托管&amp;寄售"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/f6"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:background="@drawable/server_pic02"
                        android:layout_margin="20dp"/>

                    <Button
                        android:id="@+id/b_tuo_guan"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:text="托管&amp;寄售"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_main_green"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>


            <!--技能培训-->
            <LinearLayout
                android:id="@+id/ll_pei_xun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <com.axehome.www.guojinapp.views.MyGridView
                    android:id="@+id/gv_class_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:verticalSpacing="20dp"
                    android:scrollbars="none"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_rect_white"/>
                <com.axehome.www.guojinapp.views.MyListView
                    android:id="@+id/mlv_class_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:divider="@color/f6"
                    android:dividerHeight="10dp"
                    android:scrollbars="none"/>
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_mengban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#80000000"
            android:visibility="visible"/>
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_top_white"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/title_color"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close_pic"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/f6"/>
            <com.axehome.www.guojinapp.views.MyGridView
                android:id="@+id/mgv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_margin="10dp"
                android:numColumns="3"/>
            <LinearLayout
                android:id="@+id/ll_pro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/title_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="省份"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_pro"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/title_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="城市"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="30dp">
                <Button
                    android:id="@+id/b_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_main_kuan"
                    android:text="重置"
                    android:layout_marginRight="30dp"/>
                <Button
                    android:id="@+id/b_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_main_green"
                    android:text="确定"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>